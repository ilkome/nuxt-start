menu()
  cursor pointer
  z-index 101
  position absolute
  right $baseHalf - 5px
  display flex
  flex-flow column
  align-items center
  justify-content center
  padding $baseOneAndHalf $base
  text-decoration none
  color $colorBase2
  anim()

  &:before
  &:after
    width 24px
    display block
    content ''
    height 2px
    border-radius 5px
    background $colorBase2
    opacity .8
    anim(200ms)

  &:after
    width 16px
    margin-top 6px
    margin-left 7px
